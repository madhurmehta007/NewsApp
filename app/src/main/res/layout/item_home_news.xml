<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:backgroundTint="@color/material_blue_light"
        android:outlineAmbientShadowColor="@color/material_blue_light"
        android:outlineSpotShadowColor="@color/material_blue_light"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_baseline_bookmark_24"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"

    android:paddingVertical="5dp"
    android:paddingStart="7dp"
    android:paddingEnd="15dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        app:cardCornerRadius="10dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="3dp"
        >
        <ImageView
            android:id="@+id/newsImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/news"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.cardview.widget.CardView>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_weight="10"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="National"
        android:fontFamily="@font/sofiaprosoftmedium"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"/>
    <TextView
        android:id="@+id/tvNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/sofiaprosoftmedium"
        android:lineSpacingExtra="-4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:text="Himachal Pradesh Congress chief Pratibha Singh's supporters on Friday gathered outside Shimla's The Oberoi Cecil and stopped the convoy of Chhattisgarh CM Bhupesh Baghel, one of the central leaders sent to the state to decide on a CM. A video showed Pratibha's supporters shouting slogans in her favour. \We'll be holding a meeting in the evening,\ she said."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</LinearLayout>


</LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
